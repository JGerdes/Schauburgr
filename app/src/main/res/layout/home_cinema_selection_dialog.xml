<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="192dp">

    <Button
        android:id="@+id/cinema_schauburg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schauburg Cineworld"
        app:layout_constraintBottom_toTopOf="@+id/cinema_central"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/cinema_central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Central Cineworld"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinema_schauburg"/>

</android.support.constraint.ConstraintLayout>